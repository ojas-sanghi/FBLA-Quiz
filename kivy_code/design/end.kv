#:kivy 1.11.1

<QuestionResultLabel@MDLabel>:
    text: "Question <num>: "
    halign: "right"
    font_style: "H6"
    size_hint_x: 1.075

    theme_text_color: "Primary"

<CorrectResultLabel@MDLabel>:
    text: "Incorrect"
    font_style: "H6"

    theme_text_color: "Custom"
    text_color: 1, 0, 0, 1

<EndScreen>:
    name: "end"

    MDBoxLayout:
        id: main_box
        orientation: "vertical"

        MyLabel:
            text: "Results"
            halign: "center"
            font_style: "H2"
            size_hint_y: 0.6
        MyLabel:
            id: results
            text: "Total Correct: 0/5"
            halign: "center"
            font_style: "H4"
            size_hint_y: 0.6
        
        MDBoxLayout:
            id: box_of_labels_box
            orientation: "vertical"
            spacing: 0
        
            MDBoxLayout:
                spacing: 0
                QuestionResultLabel:
                CorrectResultLabel:

            MDBoxLayout:
                spacing: 0
                QuestionResultLabel:
                CorrectResultLabel:
            
            MDBoxLayout:
                spacing: 0
                QuestionResultLabel:
                CorrectResultLabel:
            
            MDBoxLayout:
                spacing: 0
                QuestionResultLabel:
                CorrectResultLabel:
            
            MDBoxLayout:
                spacing: 0
                QuestionResultLabel:
                CorrectResultLabel:
        
        AnchorLayout:
            anchor_x: "center"
            MDBoxLayout:
                size_hint_x: 0.525
                padding: 50
                spacing: 25

                MDRaisedButton:
                    text: "Print results"
                    font_size: "20dp"
                    size_hint_y: 0.8
                    size_hint_x: 0.525

                    on_release: app.print_results()
                
                MDRaisedButton:
                    text: "Exit"
                    font_size: "20dp"
                    size_hint_y: 0.8
                    size_hint_x: 0.525

                    md_bg_color: 1, 0.4, 0.4, 1

                    on_release: app.stop()