#:kivy 1.11.1
#:import akivymd kivymd_extensions

<QuestionResultLabel@MDLabel>:
    text: "Question <num>: "
    halign: "right"
    font_style: "H6"
    size_hint_x: 1.075

    theme_text_color: "Primary"

<CorrectResultLabel@MDLabel>:
    text: "Incorrect"
    font_style: "H6"

    theme_text_color: "Custom"
    text_color: 1, 0, 0, 1

<EndScreen>:
    name: "end"

    MDBoxLayout:
        id: main_box
        orientation: "vertical"

        MyLabel:
            text: "Results"
            halign: "center"
            font_style: "H2"
            size_hint_y: 0.5
        
        MyLabel:
            id: results
            text: "Total Correct:"
            halign: "center"
            font_style: "H5"
            size_hint_y: 0.5
        
        AKCircularProgress:
            id: progress

            circle_color: 0, 0.8, 0, 1
            percent_color: 0, 0.8, 0, 1
            background_circle_color: 0, 0.4, 0, 1
            
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: None, None
            size: dp(100), dp(100)
            
            start_deg: 240
            end_deg: 480
            percent_type: "relative"
            max_percent: 5
        
        MDBoxLayout:
            id: box_of_labels_box
            orientation: "vertical"
            spacing: 0
        
            MDBoxLayout:
                spacing: 0
                QuestionResultLabel:
                CorrectResultLabel:

            MDBoxLayout:
                spacing: 0
                QuestionResultLabel:
                CorrectResultLabel:
            
            MDBoxLayout:
                spacing: 0
                QuestionResultLabel:
                CorrectResultLabel:
            
            MDBoxLayout:
                spacing: 0
                QuestionResultLabel:
                CorrectResultLabel:
            
            MDBoxLayout:
                spacing: 0
                QuestionResultLabel:
                CorrectResultLabel:
        
        AnchorLayout:
            anchor_x: "center"
            MDBoxLayout:
                size_hint_x: 0.7
                padding: 50, 0, 50, 50
                spacing: 25

                MDRaisedButton:
                    text: "Print detailed results"
                    font_size: "20dp"
                    size_hint_y: 0.8
                    size_hint_x: 0.7

                    on_release: app.print_results()
                
                MDRaisedButton:
                    text: "Exit"
                    font_size: "20dp"
                    size_hint_y: 0.8
                    size_hint_x: 0.7

                    md_bg_color: 1, 0.4, 0.4, 1

                    on_release: app.stop()