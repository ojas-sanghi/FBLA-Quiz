#:kivy 1.11.1

<CorrectBox@BoxLayout>:
    orientation: "vertical"
    padding: dp(40)

    MDLabel:
        text: "Correct!"
        halign: "center"
        bold: True
        theme_text_color: "Custom"
        text_color: app.green_color

    MDLabel:
        text: "Good job!"
        halign: "center"
        theme_text_color: "Custom"
        text_color: app.green_color
        font_style: "Caption"

    MDFillRoundFlatButton:
        id: button
        text: "Continue"
        md_bg_color: app.green_color
        pos_hint: {"center_x": .5}
        on_release: app.next_screen()

<IncorrectBox@BoxLayout>:
    orientation: "vertical"
    padding: dp(40)

    MDLabel:
        text: "Incorrect"
        halign: "center"
        bold: True
        theme_text_color: "Custom"
        text_color: app.red_color

    MDLabel:
        text: "Nice try, better luck next time!"
        halign: "center"
        theme_text_color: "Custom"
        text_color: app.red_color
        font_style: "Caption"

    MDFillRoundFlatButton:
        id: button
        text: "Continue"
        md_bg_color: app.red_color
        pos_hint: {"center_x": .5}
        on_release: app.next_screen()

<IncompleteBox@BoxLayout>:
    orientation: "vertical"
    padding: dp(40)

    MDLabel:
        text: "Input required"
        halign: "center"
        bold: True
        theme_text_color: "Custom"
        text_color: app.yellow_color

    MDLabel:
        text: "Please answer the question"
        halign: "center"
        theme_text_color: "Custom"
        text_color: app.yellow_color
        font_style: "Caption"

    MDFillRoundFlatButton:
        id: button
        text: "Dismiss"
        md_bg_color: app.yellow_color
        pos_hint: {"center_x": .5}
        


<Dialogs>: