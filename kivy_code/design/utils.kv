#:kivy 1.11.1

# file with kv classes used in more than 1 screen

<Radio@MDCheckbox>:
    group: 'radios'
    size_hint: None, None
    pos_hint: {'center_x': .1, 'center_y': .5}

<NextPrevBox@MDBoxLayout>:
    size_hint_y: 0.2
    padding: 0, 0, 0, 30

<NextAnchor@AnchorLayout>:
    anchor_x: 'right'   
    padding: 25
    size_hint_y: 0.2

<NextQuestion@MDRaisedButton>:
    text: 'Next Question'
    on_release: app.next_screen()

<PreviousAnchor@AnchorLayout>:
    anchor_x: 'left'
    padding: 25
    size_hint_y: 0.2

<PreviousQuestion@MDRaisedButton>:
    text: 'Previous Question'
    halign: 'left'
    on_release: app.previous_question()
    opacity: 1
        

<LineDivider@MDProgressBar>:
    id: progress_bar
    value: 0
    size_hint_y: 0.1
    color: [0, 0.8, 0, 1]

# label used everywhere to change color (black/white) based on theme
<MyLabel@MDLabel>:
    theme_text_color: "Primary"