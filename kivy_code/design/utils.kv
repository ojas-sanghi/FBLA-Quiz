#:kivy 1.11.1


# file with kv classes used in more than 1 screen

# MCQ/TF options
<Radio@MDCheckbox>:
    group: 'radios'
    size_hint: None, None
    pos_hint: {'center_x': .1, 'center_y': .5}

# Box which holds the following elements
<NextPrevBox@MDBoxLayout>:
    size_hint_y: 0.2
    padding: 0, 0, 0, 30

# Anchor which holds the SubmitAnswer Button
<NextAnchor@AnchorLayout>:
    anchor_x: 'right'   
    padding: 25
    size_hint_y: 0.2

# Design for correct/incorrect/incomplete dialogs
# after user submits their answer
# They are extended in "utils.py" in "Dialogs"
########################################

<SubmitAnswer@MDRaisedButton>:
    text: 'Submit Answer'
    on_release: app.submit_answer()

<CorrectDialog@BoxLayout>:
    orientation: "vertical"
    padding: dp(40)

    MDLabel:
        text: "Correct!"
        size_hint_y: None
        height: self.texture_size[1]
        halign: "center"
        valign: "center"
        bold: True
        theme_text_color: "Custom"
        text_color: app.green_color

    MDLabel:
        text: "Good job!"
        halign: "center"
        valign: "top"
        theme_text_color: "Custom"
        text_color: app.green_color
        font_style: "Caption"

    MDFillRoundFlatButton:
        id: button
        text: "Continue"
        md_bg_color: app.green_color
        pos_hint: {"center_x": .5}
        on_release: app.next_screen()


<IncorrectDialog@BoxLayout>:
    orientation: "vertical"
    spacing: dp(10)
    padding: dp(20)

    MDLabel:
        text: "Incorrect"
        halign: "center"
        theme_text_color: "Custom"
        text_color: app.red_color

    MDLabel:
        text: "Nice try, better luck next time!"
        halign: "center"
        theme_text_color: "Custom"
        text_color: app.red_color
        font_style: "Caption"

    MDFillRoundFlatButton:
        id: button
        text: "Continue"
        md_bg_color: app.red_color
        pos_hint: {"center_x": .5}
        on_release: app.next_screen()


<IncompleteDialog@BoxLayout>:
    orientation: "vertical"
    padding: dp(20)

    MDLabel:
        text: "Input required"
        halign: "center"
        valign: "center"
        theme_text_color: "Custom"
        text_color: 1, .75, 0, 1

    MDLabel:
        text: "Please answer the question"
        halign: "center"
        theme_text_color: "Primary"
        font_style: "Caption"

    MDFillRoundFlatButton:
        id: button
        text: "Dismiss"
        pos_hint: {"center_x": .5}
        md_bg_color: 1, .75, 0, 1

<Dialogs>:

########################################

# Anchor which holds the PreviousQuestion Button
<PreviousAnchor@AnchorLayout>:
    anchor_x: 'left'
    padding: 25
    size_hint_y: 0.2

<PreviousQuestion@MDRaisedButton>:
    text: 'Previous Question'
    halign: 'left'
    on_release: app.previous_question()

# line between question and the options
<LineDivider@MDProgressBar>:
    id: progress_bar
    value: 0
    size_hint_y: 0.1
    color: app.green_color

# label used everywhere to change color (black/white) based on theme
<MyLabel@MDLabel>:
    theme_text_color: "Primary"