#:kivy 1.11.1

<SAQScreen>:
    name: "saq"

    MDBoxLayout:
        orientation: "vertical"

        MyLabel:
            text: root.text
            halign: "center"
            size_hint_y: 0.1

        AnchorLayout:
            anchor_x: "center"
            padding: 50

            MDTextField:
                id: text_field
                hint_text: "Answer"
                mode: "rectangle"
    
        BottomBox: 
            NextAnchor:
                SubmitAnswer:
                    id: submit_btn
                    on_release: root.select(text_field.text)
