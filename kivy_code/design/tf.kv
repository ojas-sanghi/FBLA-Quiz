#:kivy 1.11.1

<TFScreen>:
    name: "tf"

    MDBoxLayout:
        orientation: "vertical"

        MyLabel:
            text: root.text
            halign: "center"
            size_hint_y: 0.1
        
        LineDivider:
            id: progress_bar

        MDGridLayout:
            cols: 2
            rows: 1
            size_hint_x: 1.2
            padding: 50

            MDBoxLayout:
                Radio:
                    on_press: root.select("True")
                MyLabel:
                    text: "True"
                    size_hint_x: 0.5
            
            MDBoxLayout:
                Radio:
                    on_press: root.select("False")
                MyLabel:
                    text: "False"
                    size_hint_x: 0.5

        BottomBox: 
            NextAnchor:
                SubmitAnswer: 
                    id: submit_btn
