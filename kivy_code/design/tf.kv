#:kivy 1.11.1

<TFScreen>:
    name: "tf"

    MDBoxLayout:
        orientation: "vertical"

        MyLabel:
            text: root.text
            halign: "center"
            size_hint_y: 0.1
        
        MDGridLayout:
            cols: 2
            rows: 1
            size_hint_x: 1
            padding: 50

            MDBoxLayout:
                Radio:
                    id: radio1
                    on_press: root.select("True")
                MyLabel:
                    text: "True"
            
            MDBoxLayout:
                Radio:
                    id: radio2
                    on_press: root.select("False")
                MyLabel:
                    text: "False"

        BottomBox: 
            NextAnchor:
                SubmitAnswer: 
                    id: submit_btn
