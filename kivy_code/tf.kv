#:kivy 1.11.1

<TFScreen>:
    name: "tf"

    MDBoxLayout:
        orientation: "vertical"

        MyLabel:
            text: root.question
            halign: "center"
            size_hint_y: 0.1
        
        LineDivider:

        MDGridLayout:
            cols: 2
            rows: 1
            size_hint_x: 1.2
            padding: 20

            MDBoxLayout:
                Radio:
                    on_press: root.select(0)
                MyLabel:
                    text: "True"
                    size_hint_x: 0.5
            
            MDBoxLayout:
                Radio:
                    on_press: root.select(1)
                MyLabel:
                    text: "False"
                    size_hint_x: 0.5

        SubmitAnchor:
            SubmitButton: