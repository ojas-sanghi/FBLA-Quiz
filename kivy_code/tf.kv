#:kivy 1.11.1

<TFScreen>:
    name: "tf"

    MDBoxLayout:
        orientation: "vertical"

        MyLabel:
            text: "this is a true/false question"
            halign: "center"
            size_hint_y: 0.1
        
        LineDivider:

        MDGridLayout:
            cols: 2
            rows: 1
            size_hint_x: 1.2
            padding: 20

            MDBoxLayout:
                Radio:
                    on_press: app.select(1)
                MyLabel:
                    text: "true"
                    size_hint_x: 0.5
            
            MDBoxLayout:
                Radio:
                    on_press: app.select(2)
                MyLabel:
                    text: "false"
                    size_hint_x: 0.5

        SubmitAnchor:
            SubmitButton: