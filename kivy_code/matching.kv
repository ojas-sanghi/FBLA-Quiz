#:kivy 1.11.1

# buttons in the dropdown
<MyDropDownButton@MDRaisedButton>:
    text: 'A'
    md_bg_color: 0.25, 0.25, 0.25, 1
    text_color: 1, 1, 1, 1

# dropdown menu
<MyDropDown@MDFloatLayout>:
    id: dropdown_menu
    MDDropDownItem:
        id: btn
        text: 'Pick Option'
        on_parent: dropdown.dismiss()
        on_release: dropdown.open(self)
        
        pos_hint: {"center_x": 0.7, "center_y": 0.5}

    DropDown:
        id: dropdown
        on_select: btn.text = args[1]; app.matching_select(self, args[1]) 

        MyDropDownButton:
            text: 'A'
            on_release: dropdown.select(self.text)
        MyDropDownButton:
            text: 'B'
            on_release: dropdown.select(self.text)
        MyDropDownButton:
            text: 'C'
            on_release: dropdown.select(self.text)
        MyDropDownButton:
            text: 'D'
            on_release: dropdown.select(self.text)
        MyDropDownButton:
            text: 'E'
            on_release: dropdown.select(self.text)

<MatchingScreen>:
    name: "matching"
    id: match_screen

    MDBoxLayout:
        orientation: "vertical"
        id: main_box

        # question and divider
        MyLabel:
            text: root.question
            halign: "center"
            size_hint_y: 0.1
        LineDivider:

        MDBoxLayout:
            id: question_box
            spacing: dp(25)

            # dropdowns and words
            MDGridLayout:
                cols: 2
                id: option_grid

                MyDropDown:
                MyLabel:
                    text: root.word_1
                
                MyDropDown:
                MyLabel:
                    text: root.word_2
                
                MyDropDown:
                MyLabel:
                    text: root.word_3
                
                MyDropDown:
                MyLabel:
                    text: root.word_4
            
                MyDropDown:
                MyLabel:
                    text: root.word_5
    
            # options
            MDBoxLayout:
                orientation: "vertical"

                MyLabel:
                    text: root.option_1
                    halign: "center"

                MyLabel:
                    text: root.option_2
                    halign: "center"
                
                MyLabel:
                    text: root.option_3
                    halign: "center"
                
        SubmitAnchor:
            SubmitButton:
