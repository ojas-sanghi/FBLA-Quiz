#:kivy 1.11.1

<Check@MDCheckbox>:
    size_hint: None, None
    pos_hint: {'center_x': .1, 'center_y': .5}


<CheckboxScreen>:
    name: "checkbox"

    MDBoxLayout:
        orientation: "vertical"

        MyLabel:
            text: root.question
            halign: "center"
            size_hint_y: 0.1
        
        LineDivider:

        MDGridLayout:
            cols: 2
            rows: 2
            size_hint_x: 1.2
            padding: 20

            MDBoxLayout:
                Check:
                    on_press: root.select(0)
                MyLabel:
                    text: root.option_1
                    size_hint_x: 0.5
            
            MDBoxLayout:
                Check:
                    on_press: root.select(1)
                MyLabel:
                    text: root.option_2
                    size_hint_x: 0.5
            
            MDBoxLayout:
                Check:
                    on_press: root.select(2)
                MyLabel:
                    text: root.option_3
                    size_hint_x: 0.5
                
            MDBoxLayout:
                Check:
                    on_press: root.select(3)
                MyLabel:
                    text: root.option_4
                    size_hint_x: 0.5
    
        SubmitAnchor:
            SubmitButton:
