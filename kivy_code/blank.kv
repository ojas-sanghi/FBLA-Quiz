#:kivy 1.11.1

<BlankScreen>:
    name: "blank"

    MDBoxLayout:
        orientation: "vertical"

        MyLabel:
            text: root.question
            halign: "center"
            size_hint_y: 0.1

        LineDivider:

        AnchorLayout:
            anchor_x: "center"
            padding: 50

            MDTextField:
                id: text_field
                hint_text: "Answer"
                mode: "rectangle"

        SubmitAnchor:
            SubmitButton:
                on_release: root.select(text_field.text); app.next_screen()