#:kivy 1.11.1

<Check@MDCheckbox>:
    group: 'radios'
    size_hint: None, None
    pos_hint: {'center_x': .1, 'center_y': .5}

MDBoxLayout:
    orientation: "vertical"
    MDLabel:
        text: "what does fbla stand for"
        halign: "center"
        size_hint_y: 0.1

    MDGridLayout:
        cols: 2
        rows: 2
        size_hint_x: 1.2
        padding: 20

        MDBoxLayout:
            orientation: "horizontal"
            Check:
                on_press: app.select(1)
            MDLabel:
                text: "future dumb"
                size_hint_x: 0.5
        
        MDBoxLayout:
            orientation: "horizontal"
            Check:
                on_press: app.select(2)
            MDLabel:
                text: "future smart"
                size_hint_x: 0.5
        
        MDBoxLayout:
            orientation: "horizontal"
            Check:
                on_press: app.select(3)
            MDLabel:
                text: "future scammers"
                size_hint_x: 0.5
            
        MDBoxLayout:
            orientation: "horizontal"
            Check:
                on_press: app.select(4)
            MDLabel:
                text: "future leaders"
                size_hint_x: 0.5