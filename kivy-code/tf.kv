#:kivy 1.11.1

<TFScreen>:
    name: "TF"

    MDBoxLayout:
        orientation: "vertical"

        MDLabel:
            text: "this is a true/false question"
            halign: "center"
            size_hint_y: 0.1
        
        MDProgressBar:
            value: 100
            size_hint_y: 0.1

        MDGridLayout:
            cols: 2
            rows: 1
            size_hint_x: 1.2
            padding: 20

            MDBoxLayout:
                orientation: "horizontal"
                Radio:
                    on_press: app.select(1)
                MDLabel:
                    text: "true"
                    size_hint_x: 0.5
            
            MDBoxLayout:
                orientation: "horizontal"
                Radio:
                    on_press: app.select(2)
                MDLabel:
                    text: "false"
                    size_hint_x: 0.5

        AnchorLayout:
            anchor_x: "right"
            padding: 25
            size_hint_y: 0.2

            MDRaisedButton:
                text: "Submit Answer"
                halign: "right"
                pos_hint: {'right': 1}
                on_release: app.root.current = "Blank"