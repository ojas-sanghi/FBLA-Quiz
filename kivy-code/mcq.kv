#:kivy 1.11.1

<Radio@MDCheckbox>:
    group: 'radios'
    size_hint: None, None
    pos_hint: {'center_x': .1, 'center_y': .5}

<MCQScreen>:
    name: "MCQ"

    MDBoxLayout:
        orientation: "vertical"

        MDLabel:
            text: app.question
            halign: "center"
            size_hint_y: 0.1
        
        MDProgressBar:
            value: 100
            size_hint_y: 0.1

        MDGridLayout:
            cols: 2
            rows: 2
            size_hint_x: 1.2
            padding: 20

            MDBoxLayout:
                orientation: "horizontal"
                Radio:
                    on_press: app.select(1)
                MDLabel:
                    text: app.option_1
                    size_hint_x: 0.5
            
            MDBoxLayout:
                orientation: "horizontal"
                Radio:
                    on_press: app.select(2)
                MDLabel:
                    text: app.option_2
                    size_hint_x: 0.5
            
            MDBoxLayout:
                orientation: "horizontal"
                Radio:
                    on_press: app.select(3)
                MDLabel:
                    text: app.option_3
                    size_hint_x: 0.5
                
            MDBoxLayout:
                orientation: "horizontal"
                Radio:
                    on_press: app.select(4)
                MDLabel:
                    text: app.option_4
                    size_hint_x: 0.5

        AnchorLayout:
            anchor_x: "right"   
            padding: 25
            size_hint_y: 0.2
    
            MDRaisedButton:
                text: "Submit Answer"
                halign: "right"
                pos_hint: {'right': 1}
                on_release: app.root.current = 'TF'