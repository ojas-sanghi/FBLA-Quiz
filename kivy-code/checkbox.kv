#:kivy 1.11.1

<Check@MDCheckbox>:
    size_hint: None, None
    pos_hint: {'center_x': .1, 'center_y': .5}


<CheckboxScreen>:
    name: "Checkbox"

    MDBoxLayout:
        orientation: "vertical"
        MDLabel:
            text: "A134134"
            halign: "center"
            size_hint_y: 0.1

        MDGridLayout:
            cols: 2
            rows: 2
            size_hint_x: 1.2
            padding: 20

            MDBoxLayout:
                orientation: "horizontal"
                Check:
                    on_press: app.select(1)
                MDLabel:
                    text: app.option_1
                    size_hint_x: 0.5
            
            MDBoxLayout:
                orientation: "horizontal"
                Check:
                    on_press: app.select(2)
                MDLabel:
                    text: app.option_2
                    size_hint_x: 0.5
            
            MDBoxLayout:
                orientation: "horizontal"
                Check:
                    on_press: app.select(3)
                MDLabel:
                    text: app.option_3
                    size_hint_x: 0.5
                
            MDBoxLayout:
                orientation: "horizontal"
                Check:
                    on_press: app.select(4)
                    # on_release: app.root.current = 'TF'
                MDLabel:
                    text: app.option_4
                    size_hint_x: 0.5
    
        AnchorLayout:
            anchor_x: "right"
            padding: 25
            size_hint_y: 0.2
    
            MDRaisedButton:
                text: "Submit Answer"
                halign: "right"
                pos_hint: {'right': 1}
