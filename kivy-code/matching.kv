#:kivy 1.11.1

# buttons in the dropdown
<MyDropDownButton@MDRaisedButton>:
    text: 'A'
    md_bg_color: 0.25, 0.25, 0.25, 1
    text_color: 1, 1, 1, 1

# dropdown menu
<MyDropDown@MDFloatLayout>:
    id: dropdown_menu
    MDDropDownItem:
        id: btn
        text: 'Pick Option'
        on_parent: dropdown.dismiss()
        on_release: dropdown.open(self)
        
        pos_hint: {"center_x": 0.7, "center_y": 0.5}

    # MDDropdownMenu:
    DropDown:
        id: dropdown
        on_select: btn.text = args[1]; app.matching_select(self) 

        MyDropDownButton:
            text: 'A'
            on_release: dropdown.select(self.text)
        MyDropDownButton:
            text: 'B'
            on_release: dropdown.select(self.text)
        MyDropDownButton:
            text: 'C'
            on_release: dropdown.select(self.text)
        MyDropDownButton:
            text: 'D'
            on_release: dropdown.select(self.text)
        MyDropDownButton:
            text: 'E'
            on_release: dropdown.select(self.text)

<MatchingScreen>:
    name: "Matching"
    id: match_screen

    MDBoxLayout:
        orientation: "vertical"
        id: main_box

        # question and divider
        MyLabel:
            text: "Match animals to their diet"
            halign: "center"
            size_hint_y: 0.1
        LineDivider:

        MDBoxLayout:
            id: question_box
            spacing: dp(25)

            MDGridLayout:
                cols: 2
                id: option_grid

                MyDropDown:
                MyLabel:
                    text: "horse"
                
                MyDropDown:
                MyLabel:
                    text: "horse"
                
                MyDropDown:
                MyLabel:
                    text: "horse"
    
            MDBoxLayout:
                orientation: "vertical"

                MyLabel:
                    text: "omnivore"
                    halign: "center"

                MyLabel:
                    text: "omnivore"
                    halign: "center"
                
                MyLabel:
                    text: "omnivore"
                    halign: "center"
        
        SubmitAnchor:
            SubmitButton:
                on_release: app.root.current = 'Checkbox'
