#:kivy 1.11.1

<SAQScreen>:
    name: "SAQ"

    MDBoxLayout:
        orientation: "vertical"

        MDLabel:
            text: "full form of BAA"
            halign: "center"
            size_hint_y: 0.1

        MDProgressBar:
            value: 100
            size_hint_y: 0.1

        AnchorLayout:
            anchor_x: "center"
            padding: 50

            MDTextField:
                hint_text: "Answer"
                mode: "rectangle"

    
        AnchorLayout:
            anchor_x: "right"
            padding: 25
            size_hint_y: 0.2

            MDRaisedButton:
                text: "Finish quiz!!"
                halign: "right"
                pos_hint: {'right': 1}